{
  "name": "traktify",
  "version": "0.3.0",
  "description": "multi platform desktop app for trakt.tv",
  "main": "src/main.js",
  "scripts": {
    "test": "jest --detectOpenHandles",
    "start": "electron .",
    "build-docs": "jsdoc -c jsdoc-config.json",
    "test-docs": "npm run clean && npm run build-docs && npm run clean",
    "watch-docs": "npm-watch build-docs"
  },
  "watch": {
    "build-docs": {
      "patterns": [
        "src"
      ],
      "extensions": "js,md,json",
      "ignore": [
        "node_modules",
        "out"
      ],
      "quiet": false
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CodingBobby/traktify.git"
  },
  "keywords": [
    "trakt",
    "desktop",
    "app"
  ],
  "author": "CodingBobby, Bumbleboss",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/CodingBobby/traktify/issues"
  },
  "homepage": "https://codingbobby.xyz/traktify",
  "devDependencies": {
    "colors": "^1.4.0",
    "electron": "^12.0.4",
    "jest": "^26.6.3",
    "jsdoc": "^3.6.6",
    "npm-watch": "^0.10.0",
    "rimraf": "^3.0.2"
  },
  "dependencies": {
    "directory-tree": "^2.2.9",
    "flat-cache": "^3.0.4",
    "fs-extra": "^9.1.0",
    "is-electron-renderer": "^2.0.1",
    "path": "^0.12.7",
    "tracer": "^1.1.5",
    "trakt.tv": "^8.0.0",
    "uuid": "^8.3.2"
  }
}
