{
  "name": "traktify",
  "version": "0.2.0",
  "description": "multi platform desktop app for trakt.tv",
  "main": "src/app.js",
  "scripts": {
    "test": "jest",
    "start": "electron .",
    "clean": "rimraf dist out",
    "installer-win": "node installers/windowsInstaller.js",
    "build-docs": "jsdoc -c jsdoc-config.json",
    "pack": "npm run clean && electron-builder --dir",
    "dist": "npm run clean && electron-builder"
  },
  "build": {
    "productName": "Traktify",
    "appId": "com.traktify.app",
    "copyright": "Copyright Â© 2020 CodingBobby",
    "files": [
      "src/**/*",
      "keys.secret.json"
    ],
    "mac": {
      "category": "public.app-category.video",
      "icon": "src/assets/icons/traktify/traktify.icns",
      "publish": [
        "github"
      ]
    },
    "win": {
      "icon": "src/assets/icons/traktify/traktify.ico",
      "publish": [
        "github"
      ]
    },
    "linux": {
      "category": "Video",
      "icon": "src/assets/icons/traktify/128x128.png",
      "publish": [
        "github"
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CodingBobby/traktify.git"
  },
  "keywords": [
    "trakt",
    "desktop",
    "app"
  ],
  "author": "CodingBobby, Bumbleboss",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/CodingBobby/traktify/issues"
  },
  "homepage": "https://codingbobby.xyz/traktify",
  "devDependencies": {
    "electron": "^4.2.12",
    "electron-builder": "^21.2.0",
    "electron-winstaller": "^4.0.0",
    "jest": "^24.9.0",
    "jsdoc": "^3.6.3"
  },
  "dependencies": {
    "background": "^0.3.3",
    "directory-tree": "^2.2.4",
    "discord-rpc": "^3.1.0",
    "electron-window-state": "^5.0.3",
    "fanart.tv": "^2.1.0",
    "flat-cache": "^2.0.1",
    "fs-extra": "^9.0.0",
    "moviedb-promise": "^1.5.0",
    "node-tvdb": "^4.1.0",
    "path": "^0.12.7",
    "request": "^2.88.2",
    "rimraf": "^3.0.2",
    "trakt.tv": "^7.2.0"
  }
}
